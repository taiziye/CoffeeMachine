<resources xmlns:android="http://schemas.android.com/apk/res/android">

     <style name="easy_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
	
	<style name="progressStyle">
        <item name="android:maxWidth">48.0dip</item>
        <item name="android:maxHeight">48.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/progress_loading_white</item>
        <item name="android:minWidth">48.0dip</item>
        <item name="android:minHeight">48.0dip</item>
    </style>
    
	 <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/sdk_share_dialogue_bg</item>
    </style>
    
	 <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/easy_dialog_title_font_size</item>
        <item name="android:textColor">#01D9AE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/easy_dilaog_title_padding</item>
        <item name="android:paddingRight">@dimen/easy_dilaog_title_padding</item>
        <item name="android:paddingTop">@dimen/easy_dilaog_title_padding</item>
        <item name="android:paddingBottom">@dimen/easy_dilaog_title_padding</item>
    </style>
    
    <style name="green_bottom_line_edit_text_with_length_dialog_style" parent="@android:style/Widget.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/green_edit_text_bg</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    
    <style name="dialog_button_text_style">
        <item name="android:textSize">@dimen/easy_dialog_bottom_button_font_size</item>
        <item name="android:textColor">#4f3f35</item>
        <item name="android:background">#e0dfdb</item>
        <item name="android:paddingTop">@dimen/easy_dialog_bottom_button_padding</item>
        <item name="android:paddingBottom">@dimen/easy_dialog_bottom_button_padding</item>
    </style>

	<style name="NoTitle" parent="android:Theme">
		<item name="android:windowNoTitle">true</item> 
	</style>

</resources>