<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_title_view"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:orientation="horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/home_title_machine_num"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="#7d5a40"
        android:textSize="@dimen/home_title_bar_title_font_size"
        android:layout_marginTop="10dp"
        android:text="hz00001"/>

    <TextView
        android:id="@+id/home_title_discount_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="42dp" />
    
</RelativeLayout>