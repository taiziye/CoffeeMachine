        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_instruction_buy"
            android:textSize="@dimen/help_instruction_level1_font_size"
            android:layout_marginTop="15dp"
            android:textColor="@color/coffee"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="96dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_step1"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:textColor="@color/coffee"
                android:padding="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_step2"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:textColor="@color/coffee"
                android:padding="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_step3"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:textColor="@color/coffee"
                android:padding="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_step4"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:textColor="@color/coffee"
                android:padding="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_step5"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:textColor="@color/coffee"
                android:padding="15dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_instruction_kefu"
            android:textSize="@dimen/help_instruction_level1_font_size"
            android:layout_marginTop="30dp"
            android:textColor="@color/coffee"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="96dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_kefu_phone"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:layout_marginTop="15dp"
                android:textColor="@color/coffee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_kefu_time"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:layout_marginTop="15dp"
                android:textColor="@color/coffee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_instruction_kefu_tip"
                android:textSize="@dimen/help_instruction_level2_font_size"
                android:layout_marginTop="15dp"
                android:textColor="@color/coffee"/>

