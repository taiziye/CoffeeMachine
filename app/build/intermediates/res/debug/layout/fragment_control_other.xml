<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#505050"
	android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_margin="@dimen/control_test_area_margin">

        <Button
            android:id="@+id/coffee_machine_fix_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="修复咖啡机故障"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#505050"/>

        <Button
            android:id="@+id/coffee_machine_set_wash_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="设置自动清洗时间"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#505050"/>

        <Button
            android:id="@+id/coffee_machine_move_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/global_red_btn_selector"
            android:text="进入后台"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#505050"/>

        <Button
            android:id="@+id/coffee_machine_logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/global_red_btn_selector"
            android:text="退出登录"
            android:textStyle="bold"
            android:textSize="@dimen/control_test_item_font_size"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#505050"/>

    </LinearLayout>

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/login_font_size"
        android:text="当前版本号：未知"/>

