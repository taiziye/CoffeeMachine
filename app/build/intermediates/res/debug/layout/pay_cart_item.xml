<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingLeft="40dp"
	android:paddingRight="40dp"
	android:paddingTop="10dp"
	android:paddingBottom="10dp">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/pay_cart_list_item_bg"
		android:padding="20dp">

		<LinearLayout
			android:id="@+id/pay_cart_list_item_coffee_img_parent"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:background="@drawable/coffee_info_bg"
			android:gravity="center">

			<ImageView
				android:id="@+id/pay_cart_list_item_coffee"
				android:layout_width="69dp"
				android:layout_height="95dp"
				android:src="@drawable/buy_coffee_loading"
				android:layout_margin="5.0dip"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/pay_cart_list_item_coffee_info_linear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_toRightOf="@id/pay_cart_list_item_coffee_img_parent"
			android:layout_centerVertical="true">

			<TextView
				android:id="@+id/pay_cart_list_item_coffee_name"
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:textSize="28.0dip"
				android:textColor="#3a2313"
				android:ellipsize="end"
				android:layout_marginLeft="20dp" />

			<TextView
				android:id="@+id/pay_cart_list_item_sugar"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:textSize="20.0dip"
				android:textColor="#3a2313"
				android:ellipsize="end"
				android:layout_marginLeft="20dp" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/pay_cart_list_item_coffee_price_info"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/pay_cart_list_item_coffee_info_linear"
			android:gravity="center_vertical"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="20dp">

			<TextView
				android:id="@+id/pay_cart_list_item_coffee_original_price"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:textSize="28.0dip"
				android:textColor="#000000"
				android:ellipsize="end"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/pay_cart_list_item_coffee_price"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:textSize="30.0dip"
				android:textColor="#FF3838"
				android:ellipsize="end" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/pay_cart_list_item_num"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/pay_cart_list_item_coffee_price_info">
		</LinearLayout>

		<ImageView
			android:id="@+id/pay_cart_list_item_del"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/pay_cart_list_item_del_icon"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="28dp"/>

	</RelativeLayout>

</LinearLayout>
